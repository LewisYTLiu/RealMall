<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CustomerDao">

    <select id="returnPasswordByName" parameterType="string" resultType="string">
		select passwd
		from customer
		where username = #{username}
	</select>

	<insert id="addUser" parameterType="com.entity.CustomerEntity">
		insert into customer(username, passwd)
		values(#{username}, #{passwd})
	</insert>
	<update id="updateUser" parameterType="com.entity.CustomerEntity">
		update customer
		set passwd = #{passwd}, tel = #{tel}, address = #{address}
		where username = #{username}
	</update>

</mapper>
